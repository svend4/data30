{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/macro.schema.json",
  "title": "Macro",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "trigger",
    "steps",
    "conditions",
    "errors",
    "result",
    "parameters",
    "quality_metrics",
    "reliability",
    "version"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "trigger": {
      "type": "object",
      "required": ["type", "event", "description"],
      "properties": {
        "type": { "type": "string" },
        "event": { "type": "string" },
        "description": { "type": "string" }
      },
      "additionalProperties": false
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "action", "inputs"],
        "properties": {
          "id": { "type": "string" },
          "action": { "type": "string" },
          "inputs": { "type": "object" },
          "outputs": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "expression", "on_true", "on_false"],
        "properties": {
          "id": { "type": "string" },
          "expression": { "type": "string" },
          "on_true": { "type": "string" },
          "on_false": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "message", "mitigation"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "mitigation": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "result": {
      "type": "object",
      "required": ["summary", "success_criteria"],
      "properties": {
        "summary": { "type": "string" },
        "artifacts": { "type": "array", "items": { "type": "string" } },
        "success_criteria": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "required", "description"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "required": { "type": "boolean" },
          "default": {},
          "description": { "type": "string" },
          "example": {}
        },
        "additionalProperties": false
      }
    },
    "quality_metrics": {
      "type": "object",
      "required": ["setup_time_minutes", "stability", "success_rate"],
      "properties": {
        "setup_time_minutes": { "type": "number", "minimum": 0 },
        "stability": { "type": "string", "enum": ["low", "medium", "high"] },
        "success_rate": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "reliability": {
      "type": "object",
      "required": ["score", "confidence", "basis", "last_reviewed", "signals"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence": { "type": "string", "enum": ["low", "medium", "high"] },
        "basis": { "type": "array", "items": { "type": "string" } },
        "last_reviewed": { "type": "string", "format": "date" },
        "signals": {
          "type": "object",
          "required": ["automation_level", "failure_rate", "coverage"],
          "properties": {
            "automation_level": { "type": "string" },
            "failure_rate": { "type": "number", "minimum": 0, "maximum": 1 },
            "coverage": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
